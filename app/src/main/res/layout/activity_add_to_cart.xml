<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddToCart">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/selectedproduct"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/tomato"/>
        <TextView
            android:id="@+id/selectedImageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomatoes"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/selectedImageDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 kg"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="30sp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/selectedImagePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1050 FRW"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="#F44914">
            <Button
                android:id="@+id/reducequantinty"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="30dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/quantityofproduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="50dp"/>
            <Button
                android:id="@+id/increasequantity"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="30dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <TextView
            android:id="@+id/USER_EMAILTWO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="claire"
            android:textColor="@color/white"
            android:layout_gravity="center"
            />
        <Button
            android:id="@+id/AddingproductTocart"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:text="ADD TO CART"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:padding="26dp"/>

    </LinearLayout>

</ScrollView>