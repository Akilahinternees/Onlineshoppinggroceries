<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/colorPrimary"
    android:elevation="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <TextView
                android:id="@+id/allnames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tomatoes"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                />
            <ImageView
                android:id="@+id/allproductPic"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/tomato"
                android:layout_below="@+id/allnames"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/allprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRICE = 1050FRW"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_below="@+id/allproductPic"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/allquantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1kg"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_below="@+id/allprice"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/product_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_below="@+id/allquantity"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"/>

        </RelativeLayout>


</androidx.cardview.widget.CardView>